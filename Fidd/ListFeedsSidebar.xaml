<UserControl x:Class="Fidd.ListFeedsSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fidd"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <StackPanel Orientation="Vertical">
        <ListView x:Name="ListFilters" SelectedIndex="0" SelectionChanged="FilterSelectionChanged">
            <local:ItemFeed Title="Latest"/>
            <local:ItemFeed Title="Unread"/>
            <local:ItemFeed Title="Favorites"/>
        </ListView>
        <TextBlock Text="Subscriptions"/>
        <ListView x:Name="ListSubscriptions" SelectionChanged="FeedSelectionChanged"/>
    </StackPanel>
</UserControl>
